<h1>用户登录</h1>
<% if  @sign_in == false %>
   <p color = red>账号或密码错误</p>
<% end%>
<br> </br>
<%= form_tag :action => 'create' do %>
    <p> <label for = "user_name" >用户名:</label> </p>
    <p> <%= text_field "session" ,"name" %></p>
    <br>
    <p> <label for = "user_password" >密码:</label> </p>
    <p> <%= password_field "session" ,"password" %></p>
    <%= submit_tag "登陆" %>
<% end%>
<%= link_to '注册', "users/new" %>
